---
export interface Props {
  titulo: string;
  icon: string;
}

const { titulo, icon } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A web portfolio to show my habilities" />
    <link rel="shortcut icon" href={icon} type="image/x-icon" />
    <title>{titulo}</title>
    <style>
      html {
        scroll-behavior: smooth;
      }
      /* ===== Scrollbar CSS ===== */
      /* Firefox */
      * {
        scrollbar-width: auto;
        scrollbar-color: #3c1e8b #000000;
      }

      /* Chrome, Edge, and Safari */
      *::-webkit-scrollbar {
        width: 16px;
      }

      *::-webkit-scrollbar-track {
        background: #000000;
      }

      *::-webkit-scrollbar-thumb {
        background-color: #3c1e8b;
        border-radius: 10px;
        border: 3px solid #ffffff;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
